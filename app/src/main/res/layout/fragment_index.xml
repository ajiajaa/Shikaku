<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="237dp"
        android:layout_height="222dp"
        android:layout_marginTop="97dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/logo1"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo">
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/play"
            android:background="@drawable/button_play"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnContainer"
            android:layout_below="@id/play">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/music"
                android:background="@drawable/button_music"
                android:layout_below="@id/play"
                android:layout_marginRight="10dp"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/nomusic"
                android:background="@drawable/button_nomusic"
                android:layout_below="@id/play"
                android:layout_marginRight="10dp"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/how"
                android:background="@drawable/button_rules"
                android:layout_below="@id/music"/>
        </LinearLayout>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/bug"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bug"
            android:layout_below="@id/btnContainer"/>
    </RelativeLayout>

    <View
        android:layout_width="109dp"
        android:layout_height="28dp"
        android:id="@+id/logo1"
        android:background="@drawable/logof"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
